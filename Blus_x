local player = game.Players.LocalPlayer

local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({Name = "Space X Hub", HidePremium = false, SaveConfig = true, ConfigFolder = "OrionTest"})

local Tab = Window:MakeTab({
	Name = "Tab 1",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

local Section = Tab:AddSection({
	Name = "Options"
})

-- Adicionando a mensagem no Hub
OrionLib:MakeNotification({
	Name = "Atenção!",
	Content = "Esse Hub Só Funciona com o auxílio do Blitz Hub",
	Image = "rbxassetid://4483345998",
	Time = 5  -- A notificação ficará visível por 5 segundos
})

OrionLib:MakeNotification({
	Name = "Welcome To a Space Hub",
	Content = "Notification content... what will it say??",
	Image = "rbxassetid://4483345998",
	Time = 5
})

-- Função de mover objetos ao redor do jogador
local RunService = game:GetService("RunService")
local activeTornado = false
local Forces = {}

local function moveAroundPlayerTornado()
    local updatedForces = {}
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") and part.Anchored == false and not part:IsDescendantOf(player.Character) then
            local existingForces = part:FindFirstChildWhichIsA("BodyPosition")
            if existingForces then
                existingForces:Destroy()
            end

            local forceInstance = Instance.new("BodyPosition")
            forceInstance.Parent = part
            forceInstance.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
            forceInstance.D = 1000  -- Menor resistência para mais suavidade
            forceInstance.P = 15000  -- Maior força para controlar o movimento
            table.insert(updatedForces, forceInstance)
        end
    end
    Forces = updatedForces

    local rotationAngle = 0
    local tornadoConnection
    tornadoConnection = RunService.Heartbeat:Connect(function()
        if activeTornado then
            local playerPosition = player.Character.HumanoidRootPart.Position
            local basePosition = playerPosition + Vector3.new(0, 50, 0)

            local numObjects = #Forces
            for i, forceInstance in pairs(Forces) do
                local offset
                local distance = 20
                local angleOffset = rotationAngle + (i * 0.15)

                offset = Vector3.new(
                    math.cos(angleOffset) * distance,
                    math.sin(i * 0.5) * 40 + math.random(-20, 20),
                    math.sin(angleOffset) * distance
                )

                forceInstance.Position = basePosition + offset
            end

            rotationAngle = rotationAngle + 0.05
        else
            tornadoConnection:Disconnect()
        end
    end)
end

-- Função de alternar o tornado
local function toggleTornado()
    activeTornado = not activeTornado
    if activeTornado then
        moveAroundPlayerTornado()
    else
        for _, forceInstance in pairs(Forces) do
            if forceInstance.Parent then
                forceInstance:Destroy()
            end
        end
        Forces = {}
    end
end

-- Keybind para alternar o tornado
Tab:AddBind({
    Name = "Tornado Toggle",
    Default = Enum.KeyCode.E,  -- Aqui você pode escolher a tecla que quiser
    Hold = false,  -- Não precisa segurar a tecla, só pressionar uma vez
    Callback = function()
        toggleTornado()  -- Ativa ou desativa o tornado ao pressionar a tecla
    end    
})

-- Adicionando um botão para testar a funcionalidade básica
Tab:AddButton({
    Name = "Button!",
    Callback = function()
        print("button pressed")
    end    
})
